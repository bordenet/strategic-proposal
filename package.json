{
  "name": "strategic-proposal",
  "version": "1.0.0",
  "description": "Strategic Proposal Generator - AI-assisted adversarial review workflow",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bordenet/strategic-proposal.git"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPattern=\\.test\\.js$",
    "test:e2e": "playwright test",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "eslint js/**/*.js --fix",
    "quality": "npm run lint && npm run test:coverage",
    "serve": "python3 -m http.server 8080",
    "deploy": "./scripts/deploy-web.sh",
    "prepare": "command -v pre-commit >/dev/null 2>&1 && pre-commit install || echo 'pre-commit not installed, skipping hook setup'"
  },
  "keywords": [
    "strategic-proposal",
    "sales-proposal",
    "ai-assisted",
    "workflow"
  ],
  "author": "Matt J Bordenet",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0"
  },
  "bugs": {
    "url": "https://github.com/bordenet/strategic-proposal/issues"
  },
  "homepage": "https://bordenet.github.io/strategic-proposal/"
}
